{% extends 'templates/app.twig' %}

{% block content %}
  <div class="row">
    <div class="col-md-4">
      <img src="{{product.image}}" alt="{{product.title}} image" class="img-thumbnail img-fluid">
    </div>
    <div class="col-md-8">
      {% if product.hasLowStock()  %}
        <span class="label label-warning">庫存量很低</span>
      {% endif %}

      <h3>{{product.title}}</h3>
      <p>
        {{product.description}}
      </p>
    </div>
  </div>
{% endblock %}